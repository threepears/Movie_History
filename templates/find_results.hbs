<!-- PUT OMDB MOVIE POSTER AND MOVIE INFO HERE -->
<div class="container">
  <div class="row">
    {{#each Search}} 
      <div class="col-md-3">
        <div class="movie">
          <img class="movie-poster" src="{{Poster}}" alt="{{Title}}" year="{{Year}}">
          <button id="btn-delete-movie" class="glyphicon glyphicon-remove-circle"></button>
        </div>
        <button class="btn btn-sm btn-warning btn-add-movie" type="button">Add</button>
      </div>
    {{/each}}
  </div>
</div>